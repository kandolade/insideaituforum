<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/ex.css">

<div class="signup-page">
    <div class="signup-form">
        <div class="form-block">
            <div class="form-group header">
                <h2 style="font-weight: bolder; color: white">Hi, new Player</h2>
            </div>
            <form id="signup-form" action="/signup" method="POST">
                {{#if errorMessage}}
                <div class="form-group">
                    <p class="error">{{errorMessage}}</p>
                </div>
                {{/if}}
                <div class="form-group">
                    <label for="">Username</label>
                    <input style="color: white; background-color: #121212 " placeholder="Your Username" id="signupName" name="name">
                    <span id="signup-name-error">Message</span>
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input style="color: white; background-color: #121212 " placeholder="youremail@gmail.com" id="signupEmail" name="email" type="email">
                    <span id="signup-email-error">Message</span>
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input style="color: white; background-color: #121212 " id="signupPassword" name="password" placeholder="Enter password" type="password">
                    <span id="signup-password-error">Message</span>
                </div>
                <div class="form-group">
                    <label for="">Confirm Password</label>
                    <input style="color: white; background-color: #121212 " name="confirmPassword" id="confirmSignupPassword" placeholder="Enter confirm password"
                        type="password">
                    <span id="signup-confirmPassword-error">Message</span>
                </div>
                <div class="form-group button submit-button">
                    <button type="submit">Create</button>
                </div>
                <div class="form-group ">
                    <p style="color: grey; text-align: center;">Do you have an account yet? <strong><a style="color: white"
                                href="/login">Login</a></strong></p>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/validate/validators.js"></script>
<script src="/js/validate/signup.js"></script>